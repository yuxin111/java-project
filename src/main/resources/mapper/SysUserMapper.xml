<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.SysUserMapper">

    <resultMap id="SysUserResult" type="com.example.demo.entity.SysUser">
        <id property="id" column="id"></id>
        <result property="loginName" column="login_name"></result>
        <result property="password" column="password"></result>
    </resultMap>

    <select id="selectUserList" parameterType="com.example.demo.entity.SysUser" resultMap="SysUserResult">
        select u.id,u.login_name,u.password
        from sys_user u
        <where>
            <if test="loginName != null and loginName != ''">
                AND u.login_name like concat('%', #{loginName}, '%')
            </if>
        </where>
    </select>

</mapper>